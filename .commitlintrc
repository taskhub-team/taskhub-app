{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "parserPreset": {
    "parserOpts": {
      "issuePrefixes": [
        "TAHUB-"
      ]
    }
  },
  "rules": {
    "subject-case": [
      0
    ],
    "body-max-line-length": [
      0
    ],
    "footer-max-line-length": [
      0
    ],
    "subject-max-length": [
      2,
      "always",
      72
    ],
    "subject-empty": [
      2,
      "never"
    ],
    "references-empty": [
      2,
      "never"
    ],
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "ci",
        "build",
        "revert"
      ]
    ]
  }
}
